<%= form_with model: [@vehicle, service_log], local: true do |f| %>
  <% if service_log.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% service_log.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :log_date, 'Date', class: 'form-label' %>
      <%= f.date_field :log_date, class: 'form-control', required: true %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :service_type_id, 'Service Type', class: 'form-label' %>
      <%= f.collection_select :service_type_id, ServiceType.order(:name), :id, :name,
          { prompt: 'Select service type...' }, { class: 'form-select', required: true } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :odometer, class: 'form-label' %>
      <%= f.number_field :odometer, class: 'form-control', min: 0, required: true %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :total_cost, 'Cost', class: 'form-label' %>
      <%= f.number_field :total_cost, class: 'form-control', step: 0.01, min: 0 %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :notes, class: 'form-label' %>
    <%= f.text_area :notes, class: 'form-control', rows: 3, placeholder: 'Any additional details...' %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', vehicle_service_logs_path(@vehicle), class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
