<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2>Fuel Log — <%= @vehicle.title %></h2>
    <p class="text-muted mb-0"><%= @vehicle.display_name %></p>
  </div>
  <div>
    <%= link_to 'Add Fill-Up', new_vehicle_fuel_log_path(@vehicle), class: 'btn btn-success me-2' %>
    <%= link_to 'Back to Vehicle', @vehicle, class: 'btn btn-outline-secondary' %>
  </div>
</div>

<div class="card shadow-sm mb-3">
  <div class="card-body py-2">
    <%= form_with url: vehicle_fuel_logs_path(@vehicle), method: :get, local: true, class: 'd-flex align-items-end gap-3 flex-wrap' do |f| %>
      <div>
        <%= f.label :from, 'From', class: 'form-label mb-0 small' %>
        <%= f.date_field :from, value: params[:from], class: 'form-control form-control-sm' %>
      </div>
      <div>
        <%= f.label :to, 'To', class: 'form-label mb-0 small' %>
        <%= f.date_field :to, value: params[:to], class: 'form-control form-control-sm' %>
      </div>
      <div class="d-flex gap-2">
        <%= f.submit 'Filter', class: 'btn btn-sm btn-primary' %>
        <%= link_to 'Clear', vehicle_fuel_logs_path(@vehicle), class: 'btn btn-sm btn-outline-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<% if @fuel_logs.any? %>
  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Date</th>
            <th>Odometer</th>
            <th>Miles</th>
            <th>Gallons</th>
            <th>$/Gallon</th>
            <th>Total Cost</th>
            <th>MPG</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @fuel_logs.each do |log| %>
            <tr>
              <td><%= log.log_date&.strftime('%b %d, %Y') %></td>
              <td><%= number_with_delimiter(log.odometer) %></td>
              <td><%= log.miles %></td>
              <td><%= log.gallons %></td>
              <td><%= number_to_currency(log.price_per_gallon) %></td>
              <td><%= number_to_currency(log.total_cost) %></td>
              <td><%= log.mpg || '—' %></td>
              <td class="text-end">
                <%= link_to 'Edit', edit_vehicle_fuel_log_path(@vehicle, log), class: 'btn btn-sm btn-outline-secondary me-1' %>
                <%= link_to 'Delete', vehicle_fuel_log_path(@vehicle, log), data: { turbo_method: :delete, turbo_confirm: 'Delete this fill-up?' }, class: 'btn btn-sm btn-outline-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<% else %>
  <div class="text-center py-5">
    <p class="text-muted">No fuel logs yet for this vehicle.</p>
    <%= link_to 'Record First Fill-Up', new_vehicle_fuel_log_path(@vehicle), class: 'btn btn-success' %>
  </div>
<% end %>
