<div class="row justify-content-center mt-4">
  <div class="col-md-8">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Fill-Up Details</h2>
      <div>
        <%= link_to 'Edit', edit_vehicle_fuel_log_path(@vehicle, @fuel_log), class: 'btn btn-outline-secondary btn-sm me-2' %>
        <%= link_to 'Back', vehicle_fuel_logs_path(@vehicle), class: 'btn btn-outline-secondary btn-sm' %>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <dl class="row mb-0">
          <dt class="col-sm-4">Vehicle</dt>
          <dd class="col-sm-8"><%= @vehicle.display_name %></dd>

          <dt class="col-sm-4">Date</dt>
          <dd class="col-sm-8"><%= @fuel_log.log_date&.strftime('%B %d, %Y') %></dd>

          <dt class="col-sm-4">Odometer</dt>
          <dd class="col-sm-8"><%= number_with_delimiter(@fuel_log.odometer) %> miles</dd>

          <dt class="col-sm-4">Price per Gallon</dt>
          <dd class="col-sm-8"><%= number_to_currency(@fuel_log.price_per_gallon) %></dd>

          <dt class="col-sm-4">Gallons</dt>
          <dd class="col-sm-8"><%= @fuel_log.gallons %></dd>

          <dt class="col-sm-4">Total Cost</dt>
          <dd class="col-sm-8"><%= number_to_currency(@fuel_log.total_cost) %></dd>

          <dt class="col-sm-4">Trip Miles</dt>
          <dd class="col-sm-8"><%= @fuel_log.miles || '—' %></dd>

          <dt class="col-sm-4">MPG</dt>
          <dd class="col-sm-8"><%= @fuel_log.mpg || '—' %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
