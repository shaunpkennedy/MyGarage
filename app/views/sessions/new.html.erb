<div class="row justify-content-center mt-5">
  <div class="col-md-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="card-title text-center mb-4">Log In</h2>

        <%= form_with url: login_path, method: :post, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :username, class: 'form-label' %>
            <%= f.text_field :username, class: 'form-control', autofocus: true, required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, class: 'form-control', required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit 'Log In', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p class="text-center mt-3 mb-0">
          Don't have an account? <%= link_to 'Sign up', signup_path %>
        </p>
      </div>
    </div>
  </div>
</div>
