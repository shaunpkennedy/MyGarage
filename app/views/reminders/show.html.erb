<div class="row justify-content-center mt-4">
  <div class="col-md-8">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Reminder Details</h2>
      <div>
        <%= link_to 'Edit', edit_vehicle_reminder_path(@vehicle, @reminder), class: 'btn btn-outline-secondary btn-sm me-2' %>
        <%= link_to 'Back', vehicle_reminders_path(@vehicle), class: 'btn btn-outline-secondary btn-sm' %>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <dl class="row mb-0">
          <dt class="col-sm-4">Vehicle</dt>
          <dd class="col-sm-8"><%= @vehicle.display_name %></dd>

          <dt class="col-sm-4">Service Type</dt>
          <dd class="col-sm-8"><%= @reminder.service_type.name %></dd>

          <dt class="col-sm-4">Reminder Type</dt>
          <dd class="col-sm-8"><%= @reminder.reminder_type&.name || '—' %></dd>

          <dt class="col-sm-4">Every X Miles</dt>
          <dd class="col-sm-8"><%= @reminder.miles ? number_with_delimiter(@reminder.miles) : '—' %></dd>

          <dt class="col-sm-4">Next Due At</dt>
          <dd class="col-sm-8"><%= @reminder.next_odometer ? number_with_delimiter(@reminder.next_odometer) : '—' %></dd>

          <dt class="col-sm-4">Miles Remaining</dt>
          <dd class="col-sm-8">
            <% if @reminder.miles_remaining %>
              <% if @reminder.overdue? %>
                <span class="text-danger fw-bold">Overdue by <%= number_with_delimiter(@reminder.miles_remaining.abs) %> miles</span>
              <% else %>
                <%= number_with_delimiter(@reminder.miles_remaining) %> miles
              <% end %>
            <% else %>
              —
            <% end %>
          </dd>

          <dt class="col-sm-4">Every X Months</dt>
          <dd class="col-sm-8"><%= @reminder.time || '—' %></dd>

          <dt class="col-sm-4">Notes</dt>
          <dd class="col-sm-8"><%= @reminder.notes.presence || '—' %></dd>

          <dt class="col-sm-4">Status</dt>
          <dd class="col-sm-8">
            <% if @reminder.completed_at %>
              <span class="badge bg-success">Completed <%= @reminder.completed_at.strftime('%b %d, %Y') %></span>
            <% else %>
              <span class="badge bg-primary">Active</span>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
